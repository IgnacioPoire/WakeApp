<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <Preference
        android:title="Alarm Ringtone"
        android:summary="Choose a personalized ringtone for \nyour alarms."
        android:key="alarmRingtone" />

    <ListPreference
        android:title="Map Style"
        android:summary="Choose the maps style that suits \nmore your liking."
        android:key="mapType"
        android:defaultValue="dark"
        android:entries="@array/mapTypeMenuEntries"
        android:entryValues="@array/mapTypeValues" />

    <ListPreference
        android:title="Language"
        android:summary="Choose your preferred app language."
        android:key="appLanguage"
        android:defaultValue="english"
        android:entries="@array/appLanguageEntries"
        android:entryValues="@array/appLanguageValues" />

</PreferenceScreen>
